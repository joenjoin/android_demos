<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="XYZ轴旋转"
    />    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="X轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarXRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="360"
        />
    <TextView 
        android:id="@+id/txtXRotate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="Y轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarYRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="360"
        />
    <TextView 
        android:id="@+id/txtYRotate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="Z轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarZRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="360"
        />
    <TextView 
        android:id="@+id/txtZRotate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="XY轴倾斜"
    /> 
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="X轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarXSkew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:progress="100"
        android:max="200"
        />
    <TextView 
        android:id="@+id/txtXSkew"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="Y轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarYSkew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:progress="100"
        android:max="200"
        />
    <TextView 
        android:id="@+id/txtYSkew"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>  
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Z轴缩放"
    />  
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:text="Z轴:"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    <SeekBar 
        android:id="@+id/seekbarZTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:progress="100"
        android:max="200"
        />
    <TextView 
        android:id="@+id/txtZTranslate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<ImageView 
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/river_2"
    />
<ImageView
    android:id="@+id/imgResult"    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/river_2"
    android:background="@android:color/background_dark"
    />
</LinearLayout>
</LinearLayout>
